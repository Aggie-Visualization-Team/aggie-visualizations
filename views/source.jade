extends layout

block content
  h1.
    #{source.nickname} 
  h2
    | Last Report Date - #{source.lastReportDate}
  h2
    | Type - #{source.type}
  table.table-striped
    caption
      | Events
    thead: tr
      th Date
      th Type
      th Message
    tbody
      each event, i in source.events
        tr
          td= event.datetime
          td= event.type
          td= event.message
